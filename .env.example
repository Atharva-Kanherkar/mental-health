# Database
DATABASE_URL="your_postgresql_database_url_here"

# Better Auth (Backend runs on port 4000)
BETTER_AUTH_URL="http://localhost:4000"
BETTER_AUTH_SECRET="your_secret_key_here_generate_a_long_random_string"

# Google OAuth (callback URL should be: http://localhost:4000/api/auth/callback/google)
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"

# GitHub OAuth (callback URL should be: http://localhost:4000/api/auth/callback/github)
GITHUB_CLIENT_ID="your_github_client_id_here"
GITHUB_CLIENT_SECRET="your_github_client_secret_here"

# Frontend URL (Next.js typically runs on port 3000)
FRONTEND_URL="http://localhost:3000"
